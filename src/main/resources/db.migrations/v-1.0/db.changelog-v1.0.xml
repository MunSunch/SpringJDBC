<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="2" author="MunSun">
        <sqlFile dbms="postgresql"
                 encoding="UTF-8"
                 endDelimiter="\nGO"
                 relativeToChangelogFile="true"
                 splitStatements="true"
                 stripComments="true"
                 path="schema.sql"/>
        <rollback>
            <sqlFile dbms="postgresql"
                     encoding="UTF-8"
                     endDelimiter="\nGO"
                     relativeToChangelogFile="true"
                     splitStatements="true"
                     stripComments="true"
                     path="drop_schema.sql"/>
        </rollback>
    </changeSet>

    <changeSet id="3" author="MunSun">
        <sqlFile dbms="postgresql"
                 encoding="UTF-8"
                 endDelimiter="\nGO"
                 relativeToChangelogFile="true"
                 splitStatements="true"
                 stripComments="true"
                 path="schema_insert_data.sql"/>
        <rollback>
            <sqlFile dbms="postgresql"
                     encoding="UTF-8"
                     endDelimiter="\nGO"
                     relativeToChangelogFile="true"
                     splitStatements="true"
                     stripComments="true"
                     path="drop_data.sql"/>
        </rollback>
    </changeSet>

</databaseChangeLog>